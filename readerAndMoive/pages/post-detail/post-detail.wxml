<!--pages/post-detail/post-detail.wxml-->
<!-- 先静后动，先样式后数据 -->
<view class="container">
  <image class="head-img" src="{{postDataKey.headImgSrc}}"></image>
  <image src="../../icon/music-start.png" class="audio"></image>
  <view class="author-date">
    <image class="avatar" src="{{postDataKey.author_img}}">头像</image>
    <text class="author">{{postDataKey.author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{postDataKey.dateTime}}</text>
  </view>
  <text class="title">文章标题</text>
  <view class="tool">
    <view class="circle-img">
      <image src="../../image/collection.png">收藏</image>
      <image class="share-img" src="../../image/share.png">分享</image>
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{postDataKey.detail}}</text>
</view>