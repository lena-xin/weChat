/* pages/post-detail/post-detail.wxss */
.container{
  display: flex;
  flex-direction: column;
}
.head-img{
  width: 100%;
  height: 460rpx;
  /* margin-top: 20rpx; */
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;    /*left: 50%; margin-left: -51rpx; 垂直 水平居中的表示方式*/
  margin-left: -51rpx;
  top: 150rpx;
  opacity: 0.6;
}
.author-date{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2rpx;
  color: #46556c;
}
.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.tool{
  margin-top: 20rpx;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image{
  width: 90rpx;
  height: 90rpx;
}

.share-img{
  margin-left: 30rpx;
}
/*  直线的实现方式*/
.horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.detail{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;  /*  文字的行高*/
  letter-spacing: 2px;  /* 文字的间距*/
}
page{
  height: 100%;
}