.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-data{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
}
.post-author-data{

}

.post-image{
  margin-bottom: 15px;
  margin-left: 16px;
  width: 100%;
  height: 400rpx;
  margin: auto 0;
}

.post-content{
  color: #666;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-img{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-text{
  vertical-align: middle;
  margin-right: 20px;
}